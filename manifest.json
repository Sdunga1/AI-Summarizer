{
  "manifest_version": 3,
  "name": "AI Summary Articles",
  "version": "1.0",

  "permissions": ["scripting", "activeTab", "storage"],

  "action": {
    "default_popup": "reloadPrompt.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "options_page": "options.html",

  "host_permissions": ["<all_urls>"]
}
